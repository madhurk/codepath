<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <Button
        android:id="@+id/btTip1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etAmount"
        android:layout_below="@+id/etAmount"
        android:layout_marginTop="84dp"
        android:onClick="calculateTip"        
        android:text="10%" />
    
    
    <Button
        android:id="@+id/btTip2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btTip1"
        android:layout_alignBottom="@+id/btTip1"
        android:layout_centerHorizontal="true"
        android:onClick="calculateTip"
        android:text="15%" />

     <Button
        android:id="@+id/btTip3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btTip2"
        android:layout_alignBottom="@+id/btTip2"
        android:layout_alignRight="@+id/etAmount"
        android:onClick="calculateTip"
        android:text="20%" />
    
    <TextView
        android:id="@+id/tvTipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btTip1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="128dp"
        android:text="Tip is:" />

    <TextView
        android:id="@+id/tvTipAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTipLabel"
        android:layout_alignTop="@+id/tvTipLabel" 
        android:layout_toRightOf="@+id/tvTipLabel"
        android:layout_marginLeft="20dp"    
        android:text="" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etAmount"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:text="Enter Total" />

    <TextView
        android:id="@+id/tvTipAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btTip2"
        android:layout_alignLeft="@+id/btTip1"
        android:layout_marginBottom="32dp"
        android:text="How much tip?" />

</RelativeLayout>
